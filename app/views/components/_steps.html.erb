
<div class="position-relative m-4">
    <div class="progress" style="height: 1px;">
        <div class="progress-bar" role="progressbar" style="width:  <% if !@patient.present? && !@destination.present? %> 0% <% elsif @patient.present? %> 50% <% elsif @destination.present? %> 100% <% end %> ;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
        <button type="button" class="position-absolute text-dark top-0 start-0 translate-middle btn btn-primary btn-sm rounded-pill" style="width: 2rem; height:2rem;">
             1
            <small class="text-secondary d-flex justify-content-center mt-3"><b>Identitas</b></small>
        </button>
        <button type="button" class="position-absolute text-dark top-0 start-50 translate-middle btn btn-sm <% if @patient.present? || @destination.present? %> btn-primary <% else %> btn-secondary <%end%> rounded-pill" style="width: 2rem; height:2rem;">
             2
            <small class="text-secondary d-flex justify-content-center mt-3"><b>Tujuan</b></small>
        </button>
        <button type="button" class="position-absolute text-dark top-0 start-100 translate-middle btn btn-sm <% if @destination.present? %> btn-primary <% else %> btn-secondary <% end %> rounded-pill" style="width: 2rem; height:2rem;">
             3
            <small class="text-secondary d-flex justify-content-center mt-3"><b>Daftar</b></small>
        </button>
    </div>
</div>
