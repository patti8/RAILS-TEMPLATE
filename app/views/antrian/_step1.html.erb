<div class="mx-auto" style="width: 75%;">

    <%= form_with(url: "/check_step_one", method: :post) do |d| %>
        <div class="mb-3">
            <label class="form-label">No. RM <small class="text-danger">*</small></label>
            <%= d.text_field :norm, class: "form-control", placeholder: "Masukan No. RM", required: true %>
        </div>

        <div class="mb-3">
            <label class="form-label">Tanggal Lahir <small class="text-danger">*</small></label>
            <%= d.date_field :tanggal_lahir, class: "form-control", required: true %>
        </div>

        <center>
            <%= d.submit "Berikutnya", class: "btn btn-secondary" %>
        </center>
    <% end %>
    
</div>

<% @step1 = "btn-primary" %>